<div class='user_form'>
  <div class="row">
   <div class="col-md-4 mx-auto">
    <div class="myform form ">
      <h6><%= "New Review for #{@store.name}"%></h6></BR>
      <div class="form-group">
        <%= form_tag "/store/#{@store.id}/review", method: 'post' do %>

        <h6>Comment</h6><%= text_field_tag :comment, "", class: 'form-control my-input' %></br>
        <h6>Rating</h6><%= select_tag :rating, options_for_select([['1'], ['2'], ['3'], ['4'], ['5']]), class: 'form-control my-input' %></br>

        <%= submit_tag 'Create Review', class: 'btn btn-block send-button tx-tfm' %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
