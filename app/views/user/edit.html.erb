
<div class='user_form'>
  <div class="row">
   <div class="col-md-4 mx-auto">
    <div class="myform form ">
      <h6> Update Profile </h6>
        <div class="form-group">
          <%= form_tag '/user', method: 'patch' do %>

          <%= text_field_tag :first_name, current_user.first_name, class: 'form-control my-input' %>
          <%= text_field_tag :last_name, current_user.last_name, class: 'form-control my-input' %>
          <%= text_field_tag :user_name, current_user.user_name, class: 'form-control my-input' %>
          <%= text_field_tag :email, current_user.email, class: 'form-control my-input'  %>
          <%= text_field_tag :zip, current_user.zip, class: 'form-control my-input' %>

          <%= submit_tag 'Update Profile', class: 'btn btn-block send-button tx-tfm' %>
          <% end %>
          </div>
          <%= link_to 'Change Password', '/user/password' %>
      </div>
    </div>
  </div>
</div>
