<!DOCTYPE html>
<html>
  <head>
    <title>Poseidon</title>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'index' %>
  </head>

  <body>
    <ul class = "topnav">
      <% if !current_user.nil? %>
        <li class="right"><%= link_to "Logout", '/logout' %></li>
        <li class="right"><%= link_to "Profile", user_path(current_user.id) %></li>
      <% else %>
        <li class="right"><%= link_to "Login", '/login' %></li>
        <li class="right"><%= link_to "Register", '/register' %></li>
      <% end %>
      <li class="right"><%= link_to "About", '/about' %></li>
      <li class="right"><%= link_to "Guides", '/guide' %></li>
      <li class="right"><%= link_to "Fly Shops", '/fly' %></li>
      <li class="right"><%= link_to "Bait & Tackle", '/bait' %></li>
      <li class="right"><%= link_to "Tides", '/zip_tides' %></li>
      <li class="right"><%= link_to "Forecast", '/forecast' %></li>
      <li class="right"><%= link_to "Home", '/' %></li>
    </ul>

  <% flash.each do |name, msg| %>
    <div class= "<%=name%>-flash">
     <p><%= msg %></p>
    </div>
  <% end %>

    <%= yield %>
  </body>
</html>
